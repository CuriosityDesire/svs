<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.svs.Settings">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="5"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/lblStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="20sp"
            android:layout_weight="2"/>
        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#CCC"

            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/lblStudentNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:text="Penta Harish" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#CCC"
        android:layout_margin="7dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="5"
        >


        <TextView
            android:id="@+id/lblCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course"
            android:textSize="20sp"
            android:layout_weight="2"/>
        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#CCC"

            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/lblCourseNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:text="MCA" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#CCC"
        android:layout_margin="7dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="5"
        >

        <TextView
            android:id="@+id/lblSemesterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Semester"
            android:textSize="20sp"
            android:layout_weight="2"/>
        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="#CCC"

            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/lblSemesterNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:text="sem - 1" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#CCC"
        android:layout_margin="7dp"/>

    <TextView
        android:id="@+id/lblChangeSemester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_marginRight="5dp"
        android:text="Change your semester below" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/downarrow"
        android:layout_gravity="center"/>
    <Spinner
        android:id="@+id/spnSemester"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_span="2"
        android:entries="@array/semester">

    </Spinner>


    <Button
        android:id="@+id/btnOk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:text="Ok"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />
</LinearLayout>
